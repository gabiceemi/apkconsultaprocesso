    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Controller.SplashScreen"
            android:label="@string/app_mainActivity"
            android:theme="@style/AppCompat.TelaCheia">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controller.ConsultaActivity"
            android:theme="@style/AppTheme.NoActionBarWhite"
            android:label="Detalhes" />
        <activity
            android:name=".Controller.TabsActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:label="Detalhes" />
        <activity
            android:name=".Controller.DetalhesAndamentoActivity"
            android:label="Detalhes do Andamento" />

    </application>

</manifest>